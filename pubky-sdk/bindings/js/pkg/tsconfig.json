{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/tests",
    "rootDir": "./tests",
    "types": ["node"],
    "lib": ["ES2020", "DOM"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": false
  },
  "include": ["tests/**/*.ts", "tests/**/*.d.ts"],
  "exclude": ["dist", "node_modules"]
}
